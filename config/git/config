# https://git-scm.com/docs/git-config
[alias]
	ad  = add
	br  = branch
	cm  = commit
	cme = commit -m '空コミット' --allow-empty
	df  = diff
	ft  = fetch --prune
	lg  = log --max-count 15 --oneline --graph
	lgn = log --max-count 15 --oneline --graph --no-abbrev-commit
	mg  = merge
	ph  = push
	pl  = pull --prune
	rs  = reset
	rt  = remote
	rv  = revert
	sm  = submodule
	ss  = stash
	st  = status --short --branch
	sw  = switch
[commit]
	verbose = true
[core]
	editor = nano
[credential]
	helper = cache --timeout=8640
[diff]
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true
	renames = true
[ghq]
	root = ~/ghq/
[init]
	defaultBranch = main
[merge]
	conflictStyle = zdiff3
[pull]
	rebase = false
[push]
	autoSetupRemote = true
[rebase]
	autoStash = true
	autoSquash = true
	updateRefs = true
[tag]
	sort = version:refname
[user]
	name = Akira Furukawa
	email = minguu42@gmail.com
