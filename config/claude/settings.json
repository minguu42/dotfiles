{
  "env": {
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "true",
    "CLAUDE_CODE_HIDE_ACCOUNT_INFO": "true",
    "CLAUDE_CODE_IDE_SKIP_AUTO_INSTALL": "true",
    "DISABLE_BUG_COMMAND": "true",
    "DISABLE_ERROR_REPORTING": "true",
    "DISABLE_NON_ESSENTIAL_MODEL_CALLS": "true",
    "DISABLE_TELEMETRY": "true"
  },
  "permissions": {
    "allow": [
      "Bash(find:*)",
      "Bash(go build:*)",
      "Bash(go clean:*)",
      "Bash(go fmt:*)",
      "Bash(go generate:*)",
      "Bash(go test:*)",
      "Bash(go tool:*)",
      "Bash(go list:*)",
      "Bash(go vet:*)",
      "Bash(go run:*)",
      "Bash(grep:*)",
      "Bash(gh pr:*)",
      "Bash(rm:*)",
      "Bash(docker container:*)",
      "Bash(tee:*)",
      "WebSearch",
      "Bash(gh run view:*)",
      "Bash(go mod tidy:*)",
      "Bash(terraform fmt:*)",
      "Bash(terraform validate:*)",
      "Bash(mkdir:*)"
    ],
    "deny": [
      "Bash(sudo:*)",
      "Bash(rm -rf:*)",
      "Bash(git push:*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Bash(git commit:*)",
      "Read(.env)",
      "Write(.env)"
    ],
    "disableBypassPermissionsMode": "disable"
  },
  "model": "opus",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path | select(endswith(\".go\"))' | xargs -r go tool goimports -w"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt|elicitation_dialog",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.message' | terminal-notifier -title 'Claude Code' -sound 'Boop'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title 'Claude Code' -message 'Claude has completed the task.' -sound 'Boop'"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "claude-code-statusline",
    "padding": 0
  },
  "respectGitignore": false,
  "forceLoginMethod": "claudeai",
  "language": "japanese",
  "spinnerTipsEnabled": false,
  "plansDirectory": "./.plans",
  "skipDangerousModePermissionPrompt": true,
  "showTurnDuration": true
}
